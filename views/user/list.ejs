<table id="taskboardUsers" class="table table-striped table-hover table-condensed">
    <thead>
    <tr>
        <th>
            <a href="javascript: void(0);" class="btn btn-default btn-icon tooltipTitle" title="Add new user"
               data-qtip-options='{ "position": {"my": "center right", "at": "center left"} }'
               data-add-new-user="true"
            >
                <i class="fa fa-plus"></i>
            </a>
        </th>
        <th class="col-md-1">Username</th>
        <th class="col-md-4">Fullname</th>
        <th class="col-md-4">Email</th>
        <th class="col-md-1 text-center">Admin</th>
        <th class="col-md-2 text-right">Last sign in</th>
    </tr>
    </thead>
    <tbody>
    <% _.each(users, function(user) { %>
    <tr>
        <td>
            <a class="actionMenu-toggle btn btn-icon btn-default" href="javascript: void(0);" data-popover="true">
                <i class="fa fa-chevron-down"></i>
            </a>
            <div class="hidden">
                <div class="actionMenu">
                    <ul class="actionMenu-actions">
                        <li>
                            <a href="javascript: void(0);"
                               data-user-id="<%= user.id %>"
                               data-action="userEdit"
                            >
                                <i class="fa fa-wrench"></i> Edit user
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript: void(0);" class="text-danger"
                               data-user-id="<%= user.id %>"
                               data-action="userDelete"
                            >
                                <i class="fa fa-trash-o"></i> Delete user
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </td>
        <td>
            <%= user.username %>
        </td>
        <td class="">
            <%= user.fullName() %>
        </td>
        <td>
            <a href="mailto: <%= user.email %>"><%= user.email %></a>
        </td>
        <td class="text-center">
            <% if (user.admin) { %>Yes<% } else { %>No <% } %>
        </td>
        <td class="text-right text-nowrap">
            <% if (user.lastLogin !== null) { %>
                <span class="tooltipDiv">
                    <%= user.lastLogin.fromNow() %>

                    <div class="tooltipDivContainer">
                        <h1>Last sign in data</h1>
                        <div>
                            <table class="dateTimeTooltip">
                                <tr>
                                    <th>Local time</th>
                                    <td><%= user.lastLogin.format("L LT") %></td>
                                </tr>
                                <tr>
                                    <th></th>
                                    <td><%= user.lastLogin.format("ZZ") %></td>
                                </tr>
                                <tr>
                                    <th>UTC time</th>
                                    <td><%= user.lastLogin.utc().format("L LT") %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </span>
            <% } else { %>
                <em>unknown</em>
            <% } %>
        </td>
    </tr>
    <% }) %>
    </tbody>
</table>